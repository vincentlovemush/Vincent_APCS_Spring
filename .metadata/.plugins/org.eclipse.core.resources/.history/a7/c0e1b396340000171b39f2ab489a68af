package textExcel;

// Update this file with your own code.

public class Spreadsheet implements Grid
{	private Cell[][] excel;
	public Spreadsheet(){
		for (int i=0;i<20;i++){
			for (int j=0;j<12;j++)
				excel[j][i]=new EmptyCell();
		}
	}
	@Override
	public String processCommand(String command)
	{
		return command;
	}

	@Override
	public int getRows()
	{
		return excel.length;
	}

	@Override
	public int getCols()
	{
		return excel[0].length;
	}

	@Override
	public Cell getCell(Location loc)
	{
		
		return excel[loc.getRow()][loc.getCol()];
	}

	@Override
	public String getGridText()
	{
		String grid="   |A         |B         |C         |D         |E         |F         |G         |H         |I         |J         |K         |L         |"+"\n";
		for (int i=0;i<20;i++){
			if(i<9)
				grid=grid+"  "+(i+1);
			else
				grid=grid+" "+(i+1);
			for (int j=0;j<12;j++){
				grid=grid+"|"+ excel[j][i].abbreviatedCellText();
			}
			grid=grid+"\n";
		}
		
		return grid;
	}

}
